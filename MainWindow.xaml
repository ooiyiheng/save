<Window x:Class="save.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:save"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="bnOpen" HorizontalAlignment="Left" Height="44" Margin="39,56,0,0" VerticalAlignment="Top" Width="123" Content="Open" FontSize="18"/>
        <Button x:Name="btnSave" HorizontalAlignment="Left" Height="44" Margin="182,56,0,0" VerticalAlignment="Top" Width="123" Content="Save" FontSize="18"/>
        <RichTextBox x:Name="rtbText" Margin="35,118,35,67">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
